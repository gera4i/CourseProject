                  Grid.Column="0"
                  CornerRadius="12" 
                  Margin="0" 
                  Background="#0F559A" 
                  BorderBrush="#FF97A0A5"
                  BorderThickness="0" />
                <Path 
                  x:Name="Arrow"
                  Grid.Column="1"     
                  Fill="White"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z"
