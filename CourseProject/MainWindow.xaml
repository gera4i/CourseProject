            <Label Content="Счёт" HorizontalAlignment="Left" Margin="311,59,0,0" VerticalAlignment="Top" Width="119"/>
            <TextBox x:Name="GroshyDescritptionBox" HorizontalAlignment="Left" Height="123" Margin="451,10,0,0" TextWrapping="Wrap" Text="Описание" VerticalAlignment="Top" Width="169"/>

        </Grid>

        <Grid HorizontalAlignment="Left" Height="587" Margin="10,23,0,0" VerticalAlignment="Top" Width="273">
            <Grid>
                <Button Content="Button" HorizontalAlignment="Left" Height="40" Margin="10,169,0,0" VerticalAlignment="Top" Width="253" Click="Button_Click_1"/>
                <Label x:Name="GroshySumOfAccounts" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Height="40" Width="253"/>


            </Grid>
        </Grid>
