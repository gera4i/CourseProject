                <TabItem x:Name="tab1" Header="tab1">
                    <DataGrid x:Name="GroshyDataGrid" HorizontalAlignment="Left" Height="330" VerticalAlignment="Top" Width="612" AutoGenerateColumns="False">
                        <DataGrid.Columns >
                            <DataGridTextColumn x:Name="category" Header="Категория" Binding="{Binding Path=Category.Name}" Width="120" />
                            <DataGridTextColumn x:Name="account" Header="Cчёт" Binding="{Binding Path=Account.Name}" Width="120" />
                            <DataGridTextColumn x:Name="sum" Header="Сумма" Binding="{Binding Path=SumOfTransaction}" Width="120" />
                            <DataGridTextColumn x:Name="date" Header="Дата" Binding="{Binding Path=Date}" Width="120" />
                            <DataGridTextColumn x:Name="discription" Header="Описание" Binding="{Binding Path=Description}" Width="140"/>

