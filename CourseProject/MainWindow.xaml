            <DatePicker x:Name="GroshyDatePicker" HorizontalAlignment="Left" Height="25" Margin="0,59,0,0" VerticalAlignment="Top" Width="170"/>
            <Button x:Name="GroshyCost" Content="Расход" HorizontalAlignment="Left" Height="40" Margin="0,93,0,0" VerticalAlignment="Top" Width="84" Click="GroshyCost_Click" Background="#1683e0" FontSize="18"/>
            <Button x:Name="GroshyIncome" Content="Доход" HorizontalAlignment="Left" Height="40" Margin="86,93,0,0" VerticalAlignment="Top" Width="84" Click="GroshyIncome_Click" Background="#0F559A"/>
